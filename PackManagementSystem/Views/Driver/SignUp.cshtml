@model PackManagementSystem.DTOs.DriverDto.DriverRequestModel
@{
    ViewBag.Title = "Sign-Up";
}
<div style="align-items: stretch">
    <form asp-action="SignUp">
        <div>
            <label>First Name</label>
            <input type="text" name="FirstName" placeholder="first name" required size="50">
        </div>
        <div>
            <label>Last Name</label>
            <input type="text" name="Surname" size="50" placeholder="last name" required>
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="Email" size="50" placeholder="email" required>
        </div>
        <div>
             <label>Password</label>
             <input type="password" name="DivId" placeholder="password" required>
        </div>
        <div>
            <label>Phone Number</label>
            <input type="tel" name="PhoneNumber" size="50" placeholder="phone number">
        </div>
        <div>
            <label>Date of Birth</label>
            <input type="date" name="Dob" size="50" required>
        </div>
        <div>
            <label>Park</label>
            <select asp-for="ParkId" asp-items="ViewBag.AllParks" ></select>
        </div>
        <div>
            <label>Address</label>
            <input type="text" size="50" name="Address" required>
        </div>
        <div>
            <input type="submit" value="submit" size="50" class="btn btn-outline-success">
        </div>
    </form>
</div>
