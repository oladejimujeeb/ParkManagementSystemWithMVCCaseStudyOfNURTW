@model PackManagementSystem.DTOs.DriverDto.DriverResponseModel

@{
    ViewBag.Title = "Update";
}
 @if(!string.IsNullOrEmpty(ViewBag.UpdateMsg))
        {
            <div>
                <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.UpdateMsg</p>
            </div>
        }
<div style="align-items: stretch">
    <form asp-action="UpdateDriver">
        <div>
            <label>First Name</label>
            <input type="text" name="FirstName" value="@Model.Data.Firstname" required>
        </div>
        <div>
            <label>Last Name</label>
            <input type="text" name="Surname"  value="@Model.Data.Surname" required>
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="Email" size="50" value="@Model.Data.Email" required>
        </div>
        <div>
            <label>Phone Number</label>
            <input type="tel" name="PhoneNumber" size="50" value="@Model.Data.PhoneNumber" required>
        </div>
        @*<div>
            <label>Park</label>
            <select asp-for="@Model.Data.ParkId" asp-items="ViewBag.AllParks" ></select>
        </div>*@
        <div>
            <label>Address</label>
            <input type="text" size="50" name="Address" value="@Model.Data.Address" required>
        </div>
        <div>
            <input type="submit" value="submit" size="50" class="btn btn-outline-success">
        </div>
    </form>
</div>

